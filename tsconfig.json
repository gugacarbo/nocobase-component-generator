{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "types": [
            "vite/client"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        // "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "jsx": "react-jsx",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@bundler/*": ["./src/bundler/*"],
            "@app/*": ["./src/app/*"],
            "@builder/*": ["./src/component-builder/*"],
            "@components/*": ["./src/component-builder/components/*"],
            "@utils/*": ["./src/component-builder/utils/*"],
            "@types/*": ["./src/component-builder/types/*"],
            "@src-components/*": ["./components/*"]
        }
    },
    "include": [
        "vite.config.ts",
        "src",
        "components"
    ]
}